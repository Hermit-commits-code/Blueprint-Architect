{
  "name": "blueprint-architect",
  "displayName": "Blueprint Architect",
  "description": "Generate multi-file component structures from blueprints.",
  "version": "0.1.0",
  "publisher": "JosephChu",
  "engines": {
    "vscode": ">=1.70.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "blueprintArchitect.generate",
        "title": "Blueprint Architect: Generate Component",
        "category": "Blueprint Architect"
      },
      {
        "command": "blueprintArchitect.scaffoldConfig",
        "title": "Blueprint Architect: Create Blueprint Config",
        "category": "Blueprint Architect"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "blueprintArchitect.generate",
          "when": "explorerResourceIsFolder",
          "group": "navigation@2"
        },
        {
          "command": "blueprintArchitect.scaffoldConfig",
          "when": "explorerResourceIsFolder",
          "group": "navigation@3"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "devDependencies": {
    "@types/chai": "^5.2.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "^18.19.130",
    "@types/vscode": "^1.105.0",
    "buffer": "^6.0.3",
    "chai": "^6.2.0",
    "mocha": "^11.7.4",
    "ts-node": "^10.9.2",
    "typescript": "^4.9.5",
    "vscode": "^1.1.37"
  }
}
